{% extends "base.twig" %}

{% block content %}
    <div class="content-wrapper wrapper-div-content">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
                <h1 class="article-h1 cv-page-h1">{{post.title|upper}}</h1>
                <div class="article-body wrapper-div-content-cv">
					<div class="cv-page-image">
						<img id="cv-image" src="{{getPathCode()}}/img/curriculum.jpg" alt="Forma">
					</div>
					<div class="cv-page-content">
						{{post.content}}
					</div>
					<div class="cv-page-cvdownload">
						<a href="{{getPathCode()}}/pdf/publicaciones07.pdf" class="tipo4_texto" download="publicaciones07">Download Curriculum en PDF</a>
					</div>
                </div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}